<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myusuf.mesh.MainPage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/matbackground"
            android:scaleType = "centerCrop" />

    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:scaleType="centerCrop"
        android:src="@drawable/karel"
        android:id="@+id/imageView" />


    <ImageButton
        android:id="@+id/resetSystem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/edit_undo"
        android:background="#0000"/>

    <ImageButton
        android:id="@+id/goToProvisioning"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/goToTopology"
        android:layout_alignBottom="@+id/goToTopology"
        android:layout_alignParentEnd="true"
        android:src="@drawable/plus"
        android:background="#0000"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/publish"
        android:layout_alignParentStart="true"
        android:id="@+id/id1" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id1"
        android:id="@+id/id2"/>

    <Button
        android:id="@+id/publish"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="46dp"
        android:text="Publish"
        android:textSize="11dp" />

    <Button
        android:id="@+id/bind"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/id2"
        android:layout_alignBottom="@+id/id2"
        android:layout_alignParentEnd="true"
        android:text="bind"
        android:textSize="11dp" />

    <ImageButton
        android:id="@+id/doMaintenance"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/restart"
        android:background="#0000"/>

    <ImageButton
        android:id="@+id/goToTopology"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/resetSystem"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="105dp"
        android:src="@drawable/network_alt"
        android:background="#0000"/>

</RelativeLayout>
