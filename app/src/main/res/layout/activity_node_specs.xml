<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nodeSpecs"
    tools:context="myusuf.mesh.NodeSpecs">

    <TextView
        android:id="@+id/nodeID"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Nothing"
        android:gravity="center"
        android:textSize="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nodeID"
        android:id="@+id/nodeData"
        android:textSize="50dp"
        android:text="Nothing"/>


    <TextView
        android:id="@+id/nodeType"
        android:layout_width="match_parent"
        android:layout_above="@+id/nodeData"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nodeID"
        android:text="Nothing"
        android:textSize="50dp"
        android:gravity="end"/>

    <ImageView
        android:id="@+id/tempIMG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nodeData"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="23dp"
        android:layout_toStartOf="@+id/nodeType"
        android:scaleX="2"
        android:scaleY="2"
        app:srcCompat="@drawable/transnode" />
</RelativeLayout>
