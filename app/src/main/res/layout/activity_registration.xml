<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myusuf.mesh.Registration">


    <TextView
        android:id="@+id/registerationHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Enter Details"
        android:textColor="#000000 "
        android:textSize="50dp" />
    <Button
        android:id="@+id/addDeviceButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:text="add device"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/deviceNameText"
        android:text="Enter Name:"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/registerationHeader"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/deviceNameInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/registerationHeader"
        android:layout_toEndOf="@+id/deviceNameText"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/deviceTypeText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/deviceNameText"
        android:gravity="center"
        android:text="Enter Type:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/deviceTypeInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/deviceNameInput"
        android:layout_toEndOf="@+id/deviceTypeText"
        android:textColor="#BFBEBE"
        android:gravity="center"
        android:textSize="12dp"
        android:ems="10"
        android:inputType="text"
        android:text="Ex: temp, hum, light, motor" />

    <TextView
        android:id="@+id/deviceLEText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/deviceTypeText"
        android:gravity="center"
        android:text="Is the device Low Energy?:"
        android:textSize="17dp" />

    <CheckBox
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:id="@+id/lowEnergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/deviceLEText"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/deviceTypeText"
        android:layout_toEndOf="@+id/deviceTypeText"
        android:checked="false"
        android:gravity="center"
        android:text="Low Energy" />


</RelativeLayout>
